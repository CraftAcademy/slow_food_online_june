= form_for ([@menu, @dish]) do |f|
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :allergy_info
    = f.text_area :allergy_info
  .field
    = f.label :ingredients
    = f.text_area :ingredients
  .field
    = f.label :calories
    = f.number_field :calories
  .actions
    = f.submit 'Create'
